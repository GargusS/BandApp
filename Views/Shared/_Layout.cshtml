<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BandApp</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BandApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
</head>

<body class="min-h-screen flex flex-col bg-gray-100 text-gray-800">

    <header class="bg-gray-900 text-white shadow">
        <nav class="flex items-center justify-between px-6 py-4 max-w-7xl mx-auto">
            <div class="flex items-center space-x-4">
                <a asp-area="" asp-controller="Home" asp-action="Index"
                    class="font-semibold text-lg hover:text-gray-300">
                    BandApp
                </a>
            </div>

            <div class="items-center space-x-4">
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="font-semibold text-lg hover:text-gray-300">
                            Logg ut
                        </button>
                    </form>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="font-semibold text-lg hover:text-gray-300">
                        Logg inn
                    </a>
                    <a asp-controller="Account" asp-action="Register" class="font-semibold text-lg hover:text-gray-300">
                        Registrer
                    </a>
                }
            </div>
        </nav>
    </header>

    <main role="main" class="flex-grow">
        @RenderBody()
    </main>

    <footer class="border-t text-sm text-gray-500 py-4 text-center">
        &copy; 2025 - BandApp -
        <a asp-area="" asp-controller="Home" asp-action="Privacy" class="hover:text-gray-700">
            Privacy
        </a>
    </footer>

    <script src="~/js/main.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>