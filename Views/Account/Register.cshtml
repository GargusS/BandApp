@model BandApp.ViewModels.RegisterViewModel
@{
  ViewData["Title"] = "Registrering";
}

@* Inkluderer valideringsskriptene her for denne siden spesifikt *@
@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}

<section class="min-h-screen flex items-center justify-center bg-gradient-to-b from-gray-900 to-gray-800 text-gray-100">
  <div class="bg-gray-900/70 backdrop-blur-sm rounded-2xl shadow-xl p-10 w-full max-w-md">
    <h1 class="text-3xl font-bold mb-6 text-center">Opprett konto</h1>

    <!-- Legg til asp-validation-summary for å vise feilmeldinger fra serveren -->
    <div asp-validation-summary="ModelOnly" class="text-red-400 mb-4"></div>

    <form method="post" class="space-y-6">
      <div>
        <!-- Bruk asp-for for å koble til ViewModel -->
        <label asp-for="DisplayName" class="block text-sm mb-1">Navn</label>
        <input asp-for="DisplayName" type="text"
          class="w-full p-3 rounded-lg bg-gray-800 border border-gray-700 text-gray-100 focus:ring-2 focus:ring-indigo-500">
        <!-- Viser klientvalideringsfeil her -->
        <span asp-validation-for="DisplayName" class="text-red-400 text-xs mt-1 block"></span>
      </div>

      <div>
        <label asp-for="Email" class="block text-sm mb-1">E-post</label>
        <input asp-for="Email" type="email"
          class="w-full p-3 rounded-lg bg-gray-800 border border-gray-700 text-gray-100 focus:ring-2 focus:ring-indigo-500">
        <span asp-validation-for="Email" class="text-red-400 text-xs mt-1 block"></span>
      </div>

      <div>
        <label asp-for="Password" class="block text-sm mb-1">Passord</label>
        <input asp-for="Password" type="password"
          class="w-full p-3 rounded-lg bg-gray-800 border border-gray-700 text-gray-100 focus:ring-2 focus:ring-indigo-500">
        <span asp-validation-for="Password" class="text-red-400 text-xs mt-1 block"></span>
      </div>

      <div>
        <label asp-for="ConfirmPassword" class="block text-sm mb-1">Bekreft Passord</label>
        <input asp-for="ConfirmPassword" type="password"
          class="w-full p-3 rounded-lg bg-gray-800 border border-gray-700 text-gray-100 focus:ring-2 focus:ring-indigo-500">
        <span asp-validation-for="ConfirmPassword" class="text-red-400 text-xs mt-1 block"></span>
      </div>

      <button type="submit"
        class="w-full py-3 bg-indigo-600 hover:bg-indigo-700 rounded-lg font-semibold transition-colors">
        Registrer konto
      </button>
    </form>

    <p class="mt-6 text-center text-gray-400">
      Allerede registrert? <a href="/Account/Login" class="text-indigo-400 hover:underline">Logg inn</a>
    </p>
  </div>
</section>