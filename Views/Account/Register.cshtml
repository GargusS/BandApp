@model BandApp.ViewModels.RegisterViewModel

<div class="max-w-md mx-auto mt-10 p-6 bg-neutral-800 text-white rounded-2xl shadow">
  <h2 class="text-2xl mb-4 font-semibold text-center">Registrer ny bruker</h2>
  <form asp-action="Register" method="post">
    <div class="mb-4">
      <label asp-for="DisplayName" class="block mb-1">Visningsnavn</label>
      <input asp-for="DisplayName" class="w-full p-2 rounded bg-neutral-700 border border-neutral-600" />
    </div>
    <div class="mb-4">
      <label asp-for="Email" class="block mb-1">E-post</label>
      <input asp-for="Email" class="w-full p-2 rounded bg-neutral-700 border border-neutral-600" />
    </div>
    <div class="mb-4">
      <label asp-for="Password" class="block mb-1">Passord</label>
      <input asp-for="Password" type="password" class="w-full p-2 rounded bg-neutral-700 border border-neutral-600" />
    </div>
    <div class="mb-4">
      <label asp-for="ConfirmPassword" class="block mb-1">Bekreft passord</label>
      <input asp-for="ConfirmPassword" type="password"
        class="w-full p-2 rounded bg-neutral-700 border border-neutral-600" />
    </div>
    <button type="submit" class="w-full bg-green-600 hover:bg-green-700 py-2 rounded">Opprett konto</button>
  </form>
</div>