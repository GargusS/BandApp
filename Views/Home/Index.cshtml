@{
    ViewData["Title"] = "Velkommen til BandApp";
}

<section class="text-center py-16 bg-gradient-to-b from-gray-900 via-gray-800 to-gray-900 text-gray-100">
    <h1 class="text-5xl font-extrabold mb-6 tracking-tight">Velkommen til <span class="text-indigo-400">BandApp</span>
    </h1>
    <p class="text-lg text-gray-300 max-w-2xl mx-auto mb-10">
        Administrer bandet ditt, planlegg øvinger, lagre låtideer, og hold oversikt over medlemmene — alt på ett sted.
    </p>

    <div class="flex justify-center gap-4">
        <a href="/Account/Register"
            class="px-6 py-3 bg-indigo-500 hover:bg-indigo-600 rounded-lg font-semibold transition-colors">
            Opprett konto
        </a>
        <a href="/Account/Login"
            class="px-6 py-3 border border-indigo-400 hover:bg-indigo-500/10 rounded-lg font-semibold transition-colors">
            Logg inn
        </a>
    </div>
</section>

<section class="py-20 bg-gray-100 text-gray-800">
    <div class="max-w-5xl mx-auto px-6 grid md:grid-cols-3 gap-10">
        <div class="bg-white rounded-2xl shadow p-6">
            <h2 class="text-xl font-bold mb-2 text-indigo-600">🎵 Låtarkiv</h2>
            <p>Organiser og del ideer, tekster og opptak slik at hele bandet er oppdatert.</p>
        </div>

        <div class="bg-white rounded-2xl shadow p-6">
            <h2 class="text-xl font-bold mb-2 text-indigo-600">📅 Øvingsplan</h2>
            <p>Lag øvingsplaner og hold styr på hvem som kan delta når.</p>
        </div>

        <div class="bg-white rounded-2xl shadow p-6">
            <h2 class="text-xl font-bold mb-2 text-indigo-600">👥 Medlemsoversikt</h2>
            <p>Hold oversikt over medlemmene, instrumenter og kontaktinfo på ett sted.</p>
        </div>
    </div>
</section>