@model BandApp.Models.ApplicationUser
@{
  ViewData["Title"] = "Din Profil";
}

<section class="py-16 bg-gray-900 text-white text-center">
  <h2 class="text-4xl font-bold mb-8">Administrer profil</h2>

  <div class="max-w-md mx-auto bg-gray-800 p-8 rounded-lg shadow-lg">
    <!-- Brukerinfo -->
    <div class="mb-6">
      <h3 class="text-2xl font-semibold text-indigo-400">@Model.DisplayName</h3>
      <p class="text-gray-400">@Model.Email</p>
    </div>

    <!-- Eksisterende bilde-logikk -->
    @if (!string.IsNullOrEmpty(Model.ProfilePicture))
    {
      <img src="/img/profiles/@Model.ProfilePicture"
        class="w-32 h-32 rounded-full mx-auto mb-4 object-cover border-4 border-indigo-500" />
    }
    else
    {
      <div
        class="w-32 h-32 rounded-full bg-gray-700 mx-auto mb-4 flex items-center justify-center border-4 border-dashed border-gray-500">
        <span class="text-gray-400">Ingen bilde</span>
      </div>
    }

    <!-- Opplastingsskjema -->
    <form asp-action="UpdateProfile" asp-controller="Account" method="post" enctype="multipart/form-data"
      class="space-y-4">
      <div>
        <label class="block text-sm font-medium mb-2">Endre profilbilde</label>
        <input type="file" name="imageFile" accept="image/*"
          class="block w-full text-sm text-gray-400 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-indigo-600 file:text-white hover:file:bg-indigo-700" />
      </div>

      <button type="submit" class="w-full bg-indigo-600 py-2 rounded-lg font-bold hover:bg-indigo-700 transition">
        Lagre endringer
      </button>
    </form>
  </div>

</section>